<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">



    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>schodennuk.servlets.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>schodennuk.servlets.Login</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <servlet-class>schodennuk.servlets.AdminPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FillJournal</servlet-name>
        <servlet-class>schodennuk.servlets.FillJornal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentInfo</servlet-name>
        <servlet-class>schodennuk.servlets.StudentInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRemoveVisit</servlet-name>
        <servlet-class>schodennuk.servlets.AddRemoveVisit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewJournal</servlet-name>
        <servlet-class>schodennuk.servlets.ViewJournal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowVisits</servlet-name>
        <servlet-class>schodennuk.servlets.ShowVisits</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FillJournal</servlet-name>
        <url-pattern>/fill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentInfo</servlet-name>
        <url-pattern>/students</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRemoveVisit</servlet-name>
        <url-pattern>/visits</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewJournal</servlet-name>
        <url-pattern>/view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowVisits</servlet-name>
        <url-pattern>/showvisits</url-pattern>
    </servlet-mapping>

</web-app>